<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>

	<!-- Employee Servlet -->
	<servlet>
		<servlet-name>EmployeeServlet</servlet-name>
		<servlet-class>com.bhuwan.java.web.empmgmt.EmployeeServlet</servlet-class>
		<init-param>
			<param-name>admin-email</param-name>
			<param-value>employee@lftechnology.com</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>/emp</url-pattern>
	</servlet-mapping>

	<!-- Login Servlet -->
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.bhuwan.java.web.login.LoginServlet</servlet-class>
		<init-param>
			<param-name>admin-email</param-name>
			<param-value>login@lftechnology.com</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>

	<!-- Setting context parameters -->
	<context-param>
		<param-name>admin-email</param-name>
		<param-value>admin@lftechnology.com</param-value>
	</context-param>

	<!-- Setting up error or exception handling -->
	<error-page>
		<location>/exception</location>
	</error-page>
</web-app>